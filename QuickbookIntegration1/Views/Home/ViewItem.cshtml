@model IEnumerable<QuickbookIntegration1.Models._Item>
@{
    ViewData["Title"] = "ViewItem";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>ITEMS</h1>

<div style="display:flex; justify-content:space-between;">
    <a asp-action="Initiateoauth2" asp-controller="App" class="btn new-btn"><i class="fa-solid fa-user-shield" style="margin-right:1rem"></i>QuickBook Authentication</a>
    <a asp-action="AddVendor" asp-controller="Home" class="btn new-btn"><i class="fa-sharp fa-solid fa-plus" style="margin-right:1rem"></i>Create New</a>
</div>
<table class="table table-striped" style="margin-top:2rem; border:2px solid #000000; border-color:#000000 ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Account ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SKU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QBitem)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.expenseaccref)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SKU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QBitem)
                </td>

            </tr>
        }
    </tbody>
</table>
<div class="btn-add">
    <a asp-action="QBitem" asp-controller="App" class="btn new-btn">Sync<i class="fa-sharp fa-solid fa-arrows-rotate" style="margin-left:1rem"></i></a>
</div>
