
@{
    ViewData["Title"] = "Homepage";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1 style="margin-left: 80vh;
    margin-bottom: 5vh;">
    DASHBOARD
</h1>
<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
.card {
    box-shadow: 0px 15px 10px 0px rgba(0, 0, 0, 0.5)
 /* box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);*/
  transition: 0.3s;
  width: 40%;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 2px 16px;
 
  
}

 h4 {
     margin-top: 10px;
 }
</style>
</head>
<body>

@*<h2>CARD</h2>*@


    <div style="display: flex;">
        <div class="card" style="margin-left: 8vh; display: flex;">
            <img src="~/images/ven.png" alt="Avatar" style="width: 40%"> 
            <div class="container">
                <h5><b>VENDORS : @ViewBag.vendor</b></h5>
            </div>
        </div>
        <div class="card" style="margin-left: 8vh; display: flex; ">
            <img src="~/images/PO.png" alt="Avatar" style="width: 40%">
            <div class="container">
                <h5><b>PURCHASE ORDER : @ViewBag.po</b></h5>
            </div>
        </div>
        <div class="card" style="margin-left: 8vh; display: flex; ">
            <img src="~/images/item.png" alt="Avatar" style="width: 40%">
            <div class="container">
                <h5><b>ITEM : @ViewBag.item</b></h5>
            </div>
        </div>
        <div class="card" style="margin-left: 8vh; display: flex; ">
            <img src="~/images/Cus.png" alt="Avatar" style="width: 40%">
            <div class="container">
                <h5><b>CUSTOMER: @ViewBag.Customer</b></h5>
            </div>
        </div>

    </div>



</body>
</html> 
